{
  "name": "@zodiac/pilot-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "dotenvx run -- react-router dev",
    "check-types": "react-router typegen && tsc -b",
    "test": "dotenvx run --env-file=.env.test -- vitest",
    "test:e2e": "PW_CHROMIUM_ATTACH_TO_OTHER=1 playwright test --headed",
    "test:e2e:ui": "pnpm test:e2e --ui",
    "lint": "eslint . --max-warnings=0",
    "db:start": "docker-compose up db",
    "db:create-migration": "drizzle-kit generate --name $1",
    "db:migrate": "dotenvx run -- drizzle-kit push",
    "db:migrate-test": "dotenvx run --env-file=.env.test -- drizzle-kit push"
  },
