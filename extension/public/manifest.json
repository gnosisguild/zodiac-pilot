{
  "name": "Zodiac Pilot",
  "description": "Simulate dApp interactions and record transactions",
  "version": "0.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "zodiac16.png",
    "32": "zodiac32.png",
    "48": "zodiac48.png",
    "128": "zodiac128.png"
  },
  "action": {
    "default_title": "Zodiac Pilot"
  },
  "permissions": ["tabs", "scripting", "declarativeNetRequest"],
  "background": {
    "service_worker": "build/background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "rules1",
        "enabled": true,
        "path": "requestRules.json"
      }
    ]
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "all_frames": true,
      "js": ["build/contentScript.js"]
    },
    {
      "matches": ["https://pilot.gnosisguild.org"],
      "run_at": "document_start",
      "js": ["build/introduce.js"]
    },
    {
      "matches": ["https://pilot.gnosisguild.org"],
      "run_at": "document_end",
      "js": ["build/launch.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    }
  ]
}
